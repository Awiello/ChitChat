<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/loginpagebgcolor"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/genericlogopng" />

    <EditText
        android:id="@+id/register_activity_email_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:hint="Email"/>

    <EditText
        android:hint="Password"
        android:id="@+id/register_activity_password_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/register_activity_email_edit_text"
        app:layout_constraintStart_toStartOf="@+id/register_activity_email_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/register_activity_email_edit_text" />

    <Button
        android:id="@+id/register_activity_create_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"

        android:text="Create"
        app:layout_constraintEnd_toEndOf="@+id/register_activity_name_edit_text"
        app:layout_constraintStart_toStartOf="@+id/register_activity_name_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/register_activity_name_edit_text" />

    <TextView
        android:id="@+id/register_activity_login_account_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Login to an Account"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_activity_create_button" />

    <EditText
        android:id="@+id/register_activity_name_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintEnd_toEndOf="@+id/register_activity_password_edit_text"
        app:layout_constraintStart_toStartOf="@+id/register_activity_password_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/register_activity_password_edit_text" />


</androidx.constraintlayout.widget.ConstraintLayout>